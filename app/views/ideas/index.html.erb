<div class="container">
  <div class="idea-search">
    <h1>Search Ideas</h1>
    <%= text_field :search, :filter, placeholder: "Search by Name or Description" %>
    <button name="button-search">Search</button>
  </div>

  <h1>New Idea</h1>

  <form class="save-form">
    <%= text_field_tag :title, nil, placeholder: "Title", id: "title"%>
    <%= text_field_tag :body, nil, placeholder: "Description", id: "description" %>
    <button type="button" name="save-new-idea" id="save-btn" class="btn btn-default">Save</button>
  </form>

  <h1>Ideas</h1>

  <table  id="ideas-table">
      <tr id="table-headings">
        <th>Title</th>
        <th>Body</th>
        <th>Quality</th>
        <th>Upvote</th>
        <th>Downvote</th>
        <th>Delete</th>
      </tr>
      <tbody>
    </tbody>
  </table>
</div>
